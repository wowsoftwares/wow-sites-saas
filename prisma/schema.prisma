generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id              String   @id @default(cuid())
  businessName    String
  subdomain       String   @unique
  industry        String   // 'restaurant', 'salon', 'plumber'
  email           String
  phone           String
  address         String?
  aboutUs         String
  services        Json     // Array of strings
  hours           Json?    // Business hours object
  socialLinks     Json?    // { facebook, instagram, etc }
  templateId      String
  status          String   @default("pending") // pending, deploying, active, failed
  deploymentUrl   String?
  siteData        Json?    // Store generated HTML or metadata
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([subdomain])
  @@index([status])
}
